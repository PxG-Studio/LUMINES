{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "../../src/*"
      ],
      "@/components/*": [
        "../../src/components/*"
      ],
      "@/design-system/*": [
        "../../src/design-system/*"
      ],
      "@/wis2l/*": [
        "../../packages/wis2l/*"
      ],
      "@/wis2l/*": [
        "../../packages/wis2l/*"
      ],
      "@/lib/*": [
        "../../src/lib/*",
        "../../src/lib/spark/*"
      ],
      "@/state/*": [
        "../../src/state/*"
      ],
      "@/hooks/*": [
        "../../src/hooks/*"
      ],
      "@/utils/*": [
        "../../src/utils/*"
      ],
      "@/app/*": [
        "./src/app/*",
        "../../src/app/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
