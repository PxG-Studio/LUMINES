{
  "name": "lumines-wissil",
  "version": "1.0.0",
  "private": true,
  "description": "WISSIL System - Workspace, Identity, Spark, Slate, Ignis, Landing - LumenForge.io Ecosystem",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "npm run storybook:sync-wissil && npx storybook dev -p 6006",
    "storybook:win": "powershell -ExecutionPolicy Bypass -File scripts/start-storybook.ps1",
    "build-storybook": "npm run storybook:sync-wissil && npx storybook build",
    "storybook:sync-wissil": "npx tsx scripts/generate-wissil-stories.ts",
    "test-storybook": "test-storybook",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "chromatic:ci": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes --auto-accept-changes",
    "chromatic:test": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes --only-changed",
    "percy:storybook": "percy exec -- node scripts/percy-storybook.js",
    "percy:snapshot": "percy snapshot storybook-static",
    "test": "vitest --run",
    "test:unit": "vitest --run",
    "test:integration": "vitest --run tests/integration",
    "test:e2e": "playwright test",
    "test:perf": "playwright test tests/perf",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:a11y": "playwright test --grep a11y",
    "lint:eslint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "build-wissil": "npm run build",
    "check-docs": "tsx scripts/check-doc-coverage.ts",
    "verify-mdx": "tsx scripts/verify-mdx.ts",
    "audit-stories": "tsx scripts/audit-stories.ts",
    "build-plugin": "cd packages/wissil-plugin-sdk && npm run build-plugin"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "esbuild-wasm": "^0.19.12",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.344.0",
    "next": "^14.2.0",
    "next-auth": "^5.0.0-beta.30",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "yaml": "^2.3.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@mdx-js/mdx": "^3.0.0",
    "@monaco-editor/react": "^4.6.0",
    "@originjs/vite-plugin-federation": "^1.3.0",
    "@percy/cli": "^1.28.0",
    "@percy/storybook": "^3.0.0",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/addon-links": "^10.1.2",
    "@storybook/addon-mcp": "^0.1.4",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs-vite": "10.1.2",
    "@storybook/react": "^10.1.2",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.24.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@webcontainer/api": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "chromatic": "^11.0.0",
    "fuse.js": "^7.0.0",
    "glob": "^10.3.10",
    "jsdom": "^23.0.1",
    "mermaid": "^10.6.1",
    "monaco-editor": "^0.47.0",
    "nats": "^2.20.0",
    "postcss": "^8.4.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.27.0",
    "storybook": "^10.1.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.4",
    "y-webrtc": "^10.2.0",
    "yjs": "^13.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
