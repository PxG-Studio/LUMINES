{
  "dashboard": {
    "title": "SPARK Monitoring Dashboard",
    "tags": ["spark", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "AI Generation Count",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(spark_generations_total[5m])) by (provider)",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "Token Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(spark_tokens_used_total[5m])) by (provider)",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "count(spark_active_users)",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Error Count",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(spark_errors_total)",
            "legendFormat": "Total Errors"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 16 }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}

