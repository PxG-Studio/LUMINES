{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/slate/*": ["./src/slate/*"],
      "@/state/*": ["./src/state/*"],
      "@/wissil/*": ["./packages/wis2l/*"],
      "@/lib/*": ["./slate/type-stubs.d.ts"],
      "@/lib/database/*": ["./slate/type-stubs.d.ts"],
      "@/lib/cache/*": ["./slate/type-stubs.d.ts"],
      "@storybook/*": ["./slate/type-stubs.d.ts"],
      "@codesandbox/*": ["./slate/type-stubs.d.ts"]
    }
  },
  "include": [
    "slate/**/*.ts",
    "slate/**/*.tsx",
    "src/state/**/*.ts",
    "src/state/**/*.tsx",
    "slate/type-stubs.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/design-system/**",
    "src/tokens/**",
    "src/ignis/**",
    "src/ignition/**",
    "packages/wis2l/**",
    "src/lib/**",
    "src/stories/**",
    "tests/**",
    "coverage/**"
  ]
}

