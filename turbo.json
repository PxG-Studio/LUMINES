{
  "$schema": "https://turbo.build/schema.json",
  "$comment": "TODO: Future migration - Gradually migrate SPARK and SLATE from src/app/ to packages/",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:federation": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "remoteEntry.js"]
    },
    "storybook": {
      "outputs": [
        "storybook-static/**",
        ".cache/storybook-vite/**",
        ".cache/storybook/**"
      ],
      "dependsOn": ["^build"],
      "cache": true
    },
    "build-storybook": {
      "outputs": [
        "storybook-static/**",
        ".cache/storybook-vite/**",
        ".cache/storybook/**"
      ],
      "dependsOn": ["^build"],
      "cache": true
    },
    "chromatic": {
      "dependsOn": ["storybook", "build-storybook"],
      "cache": true,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    }
  }
}

